<div class="container" style="padding-bottom: 75px">
  <h1 align="center">CURRENT LIST OF ARTICLES</h1></br>
  
  
  <% obj.each do |article| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="article-title">
            <%= link_to article.title, article_path(article) %>
          </div>
          <div class="article-body">
            <%= truncate(article.description, length: 75) %>
            <div class="article-meta-details">
              <small>Created By: <%= article.user.username if article.user %>, <%= time_ago_in_words(article.created_at) %> ago, Last Updated: <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
          <% if logged_in? && current_user == article.user %>
            <div class="article-actions">
              <div class="col-sm-offset-1">
                <%= link_to "Edit This Article", edit_article_path(article), class: "btn btn-primary btn-xs" %>
                <%= link_to "Return to Articles Index", articles_path, class: "btn btn-success btn-xs" %>
                <%= link_to "DESTROY ARTICLE", article_path(article), method: :delete, data: {confirm: "Are you sure you want to annihilate this article?"}, class: "btn btn-danger btn-xs" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
 </div>