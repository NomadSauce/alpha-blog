<div class="container">
  <h2>HERE IS YOUR ARTICLE</h2></br>
  <p> Title: <%= @article.title %></p>
  <ul class="listing">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
        <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
        <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
      </div>
    </div>
  </ul>
  <p> Description: <%= @article.description %></p></br>
</div>

<div class="article-actions">
  <div class="col-sm-offset-1">
    <%= link_to "Edit This Article", edit_article_path(@article), class: "btn btn-primary btn-xs" %>
    <%= link_to "Return to Articles Index", articles_path, class: "btn btn-success btn-xs" %>
    <%= link_to "DESTROY ARTICLE", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to annihilate this article?"}, class: "btn btn-danger btn-xs" %>
  </div>
</div>
